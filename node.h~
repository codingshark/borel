#ifndef NODE_H_
#define NODE_H_

#include <list>
#include <string>

using std::string;
using std::list;

#define NODE_UNKNOWN	0
#define NODE_TYPE	1
#define NODE_TOKEN	2

#define NODE_STR	3

class node
{
	public:
		node ();
		node(const node & a_node);
		virtual ~node ();
		
		node & operator = (const node & a_node);
		
		void clear();
#ifdef	DEBUG
		void print_node();
#endif

	public:
		struct var
		{
			var(const string & a_name, const string & a_usr_type, int a_cfg_type);
			~var();
			var & operator = (const var & a_var);
			string	name;
			string	usr_type;
			int	cfg_type;
		};
	
	public:
		int	cfg_type;
		string	name;
		list<list<node::var> >	r_rules;
};

#endif
