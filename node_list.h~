#ifndef NODE_LIST_H_
#define NODE_LIST_H_


#include <list>
#include <vector>
#include <string>
#include <deque>
#include "node.h"

using std::list;
using std::vector;
using std::deque;

class node_list
{
	public:
		node_list ();
		virtual ~node_list ();
#ifdef DEBUG
		void print_node_list();
#endif
	public://every context free grammar is a four-tuple
		//they are non-terminals, terminals, rules and start symbol
		list<node> rules;
		
		vector<string>	non_terms;
		deque<string>	terms;
		string		start;
};

#endif
